<resources>

    <!-- Custom light theme -->

    <style name="CustomLightTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarTabTextStyle">@style/CustomLightThemeTabText</item>
    </style>

    <style name="CustomLightThemeTabText" parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textSize">@dimen/general_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Button styles -->

    <style name="custom_button_style" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/general_label_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/light_background_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:padding">5dp</item>
    </style>


</resources>